# ===============================
# DATABASE CONFIGURATION
# ===============================
# ensure the hostname is 'db' and the database name is 'ecommerce_db'
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/ecommerce_db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# ===============================
# JPA / HIBERNATE
# ===============================
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true

# ===============================
# SECURITY - JWT
# ===============================

JWT_SECRET=super_long_secret_key_that_is_at_least_32_chars_long_123456789
JWT_EXPIRATION=86400000

# ===============================
# STRIPE (TEST MODE)
# ===============================
# Ajoutez ceci dans backend/.env
STRIPE_SECRET_KEY=sk_test_placeholder_key_12345
# Must be at least 32 characters long for HS256
